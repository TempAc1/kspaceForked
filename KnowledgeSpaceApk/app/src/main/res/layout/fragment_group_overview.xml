<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayGrpOverviewF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupAct.GroupOverviewF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardVDetailsGrpOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/linearLayCardVDetailsGrpOverview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grpTitleCardVDetailsGrpOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:textColorHint="#030202" />

                <TextView
                    android:id="@+id/grpShortDescCardVDetailsGrpOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Short Descriptiom"
                    android:textColorHint="#040404" />

                <TextView
                    android:id="@+id/grpAdminNameCardVDetailsGrpOverview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Admin Name"
                    android:textColorHint="#040404" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/grpOption1GrpOverviewFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:minHeight="50dp"
            android:tag="1"
            android:text="Course" />

        <TextView
            android:id="@+id/grpOption2GrpOverviewFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:hint="option 2"
            android:minHeight="50dp"
            android:tag="2"
            android:text="Assignment" />

        <TextView
            android:id="@+id/grpOption3GrpOverviewFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:hint="option 3"
            android:minHeight="50dp"
            android:tag="3"
            android:text="Quizzes" />

        <TextView
            android:id="@+id/grpOption4GrpOverviewFrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:hint="option 4"
            android:minHeight="50dp"
            android:tag="4"
            android:text="Discussion Panel" />

    </LinearLayout>

</FrameLayout>