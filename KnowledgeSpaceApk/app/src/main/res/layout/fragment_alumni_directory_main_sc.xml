<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayAlumniDirMainScF"
    android:padding="10dp"
    tools:context=".Alumni.Directory.AlumniDirectoryMainScF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Search For Alumni Here !"
                android:textSize="40dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider29"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="Please Fill The Below Details"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/editTvNameCusDialogAddAlumniF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Name" />

                <EditText
                    android:id="@+id/editTvBatchYrCusDialogAlumniDirMainScF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:minHeight="50dp"
                    android:text="Batch Year" />

                <EditText
                    android:id="@+id/editTvDeptNameCusDialogAlumniDirMainScF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Department" />

                <EditText
                    android:id="@+id/editTvRegNoCusDialogAlumniDirMainScF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Registration No" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/searchBtnAlumniDirectoryMainScF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Search Now"
            android:visibility="visible" />


    </RelativeLayout>

</FrameLayout>