<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="#F4F4F4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postTitleTvPopupDialogQnAnsAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center|start"
                    android:text="Question Title"
                    android:textSize="18sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/questionTitleEditTvPopupDialogQnAnsAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Title"
                        android:inputType="textPersonName"
                        android:maxHeight="200dp"
                        android:minHeight="50dp" />
                </ScrollView>


                <TextView
                    android:id="@+id/TvPopupDialogQnAnsAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center|start"
                    android:minHeight="50dp"
                    android:paddingTop="5dp"
                    android:text="Question Description"
                    aandroid:textSize="18sp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <EditText
                        android:id="@+id/questionDescriptionEditTvPopupDialogQnAnsAct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_shape_edittextview_backgrd"
                        android:gravity="start"
                        android:hint="Describe your doubts here"
                        android:inputType="text"
                        android:minHeight="500dp"
                        android:paddingStart="8dp"
                        android:paddingTop="5dp" />
                </ScrollView>

                <Button
                    android:id="@+id/addQuesBtnPopupDialogQnAnsAct"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="#F8F3F3"
                    android:backgroundTint="#EEEEA5"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="Post Doubt" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/cancelBtnPopupDialogQnAnsAct"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnBookK"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_cancel_24" />

    </LinearLayout>

</RelativeLayout>