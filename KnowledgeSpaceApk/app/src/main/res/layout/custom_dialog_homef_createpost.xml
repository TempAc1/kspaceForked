<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentRelativeLayCreatePostHomeF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="#F4F4F4">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/enterPostTitleTvCreatePostHomeF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="Enter Title"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:minHeight="55dp" />

                <EditText
                    android:id="@+id/setPostDescTvCreatePostHomeF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_stroke_allround"
                    android:gravity="start"
                    android:hint="Enter Description...."
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:minHeight="300dp"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/setPostTagTvCreatePostHomeF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Tags"
                    android:inputType="textPersonName"
                    android:minHeight="50dp" />

                <TextView
                    android:id="@+id/selectPostMediaTvCreatePostHomeF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableEnd="@drawable/ic_baseline_attach_file_24"
                    android:hint="Select File"
                    android:minHeight="50dp"
                    android:padding="5dp"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/postPubliclySwitchCusDiaHomeFCreatePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeTextType="uniform"
                    android:minHeight="55dp"
                    android:text="Post Publicly" />

                <Button
                    android:id="@+id/postNowBtnCreatePostHomeF"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:background="#F8F3F3"
                    android:backgroundTint="#EEEEA5"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:text="POST NOW" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/cancelBtnCusDiaAddDiscussion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btnBookK"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_cancel_24" />

    </LinearLayout>


</RelativeLayout>