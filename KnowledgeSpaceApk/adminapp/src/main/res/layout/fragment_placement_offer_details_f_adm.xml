<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayPlacementOfferDetailFAdm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacementActAdm.PlacementOfferDetailsFAdm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTvPlacementOfferDetailsFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Offer Title"
            android:padding="5dp"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider19"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/jobDescriptionTvPlacementOfferDetailsFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Offer Description"
            android:padding="5dp"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider20"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/regLinkTvPlacementOfferDetailsFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Link"
            android:minHeight="50dp"
            android:padding="5dp"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>