<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topLinearLayUpdateAlumniDialogPrevYrHoF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtVUpdateAlumniDialogPrevYrHoF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="Update Details"
                android:textSize="40sp" />

            <View
                android:id="@+id/dividerNew"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/noTvAlumniDetailsUpdateAlumniDialogPrevYrHoF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:padding="10dp"
                    android:text="No"
                    android:textColor="#060404" />

                <TextView
                    android:id="@+id/yesTvAlumniDetailsUpdateAlumniDialogPrevYrHoF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:padding="10dp"
                    android:text="Yes"
                    android:textColor="#132CCF" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cancelBtnUpdateAlumniDialogPrevYrHoF"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btnBookK"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_cancel_24" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>