<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayUpdateAlumniDetailFAdm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AlumniActAdm.AlumniDirectory.AlumniDirectoryMainSc.UpdateAlumniDetailsFAdm"
    android:paddingBottom="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="#F4F4F4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgVUpdateAlumniDetailFAdm"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />

            <View
                android:id="@+id/divider32"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTvNameUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Name" />

                <ImageView
                    android:id="@+id/imgVEditTvNameUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTvBatchYrUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:minHeight="50dp"
                    android:text="Batch Year" />

                <ImageView
                    android:id="@+id/imgVBatchYrUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTvDeptNameUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Department" />

                <ImageView
                    android:id="@+id/imgVDeptUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/editTvRegNoUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="50dp"
                    android:text="Registration No" />


                <ImageView
                    android:id="@+id/imgVRegNoUpdateAlumniDetailFAdm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/updateAlumniBtnUpdateAlumniDetailFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Update Details" />

    </RelativeLayout>

