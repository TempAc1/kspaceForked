<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materialCardVAlumniSearchFAdm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgVAlumniSearchResultFAdm"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <View
            android:id="@+id/divider32"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tVNameAlumniSearchResultFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:text="Name" />

        <TextView
            android:id="@+id/tVBatchYrAlumniSearchResultFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:minHeight="50dp"
            android:text="Batch Year" />

        <TextView
            android:id="@+id/tVRegNoAlumniSearchResultFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:text="Registration No" />

        <TextView
            android:id="@+id/tVDeptNameAlumniSearchResultFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:text="Department" />

        <View
            android:id="@+id/divider33"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Links"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/linkedInImgVSingleResDesAlumniSearchFAdm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:srcCompat="@drawable/linkedin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/updateAlumniTvSingleResDesRecVAlumniSearchFAdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_baseline_edit_24"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="Update"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/deleteAlumniTvSingleResDesRecVAlumniSearchFAdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_baseline_delete_forever_24"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="10dp"
                android:text="Delete"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <View
            android:id="@+id/divider34"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>