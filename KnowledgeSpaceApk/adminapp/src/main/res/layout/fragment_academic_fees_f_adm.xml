<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FeesActAdm.AcademicFeesFAdm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fee Plan"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/FeePlanTvAcaFeesFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="BATCH YEAR - 2019"
            android:textSize="24sp" />

        <View
            android:id="@+id/divider13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:padding="4dp"
            app:alignmentMode="alignBounds"
            app:columnCount="2"
            app:rowOrderPreserved="false"
            app:useDefaultMargins="true">

            <TextView
                android:id="@+id/r1c1GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:padding="10dp"
                android:text="Academic Fees"
                android:textSize="18sp"
                app:layout_columnWeight="1" />

            <TextView
                android:id="@+id/r1c2GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Tv1"
                android:padding="10dp"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r2c1GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Total Payable"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r2c2GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Tv1"
                android:padding="10dp"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r3c1GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Total Paid"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r3c2GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Tv1"
                android:padding="10dp"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r4c1GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Amount Left"
                android:textSize="18sp"
                app:layout_columnWeight="1" />


            <TextView
                android:id="@+id/r4c2GridVAcaFeesFAdm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Tv1"
                android:padding="10dp"
                android:textSize="18sp"
                app:layout_columnWeight="1" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/payNowBtnAcaFeesFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:minHeight="50dp"
            android:text="Pay Now"
            android:textSize="24sp" />
    </LinearLayout>
</FrameLayout>