<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayAddQuizQuesFAdm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupFragAdm.GrpQuizesAdm.AddQuizQuesFAdm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionNoTvAddQuizQuesFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:hint="&quot;?/?"
            android:paddingLeft="10dp"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/EnterQuesEditTvAddQuizQuesFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Question"
            android:inputType="textPersonName|text"
            android:minHeight="50dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#070000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="1."
                app:autoSizeTextType="uniform" />

            <EditText
                android:id="@+id/opt1TvAddQuizQuesFAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 1"
                android:maxLines="1"
                android:minHeight="50dp"
                android:tag="1" />
        </LinearLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#0B0000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="2."
                app:autoSizeTextType="uniform" />

            <EditText
                android:id="@+id/opt2TvAddQuizQuesFAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 2"
                android:maxLines="1"
                android:minHeight="50dp"
                android:tag="2" />

        </LinearLayout>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#060000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="3."
                app:autoSizeTextType="uniform" />

            <EditText
                android:id="@+id/opt3TvAddQuizQuesFAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 3"
                android:maxLines="1"
                android:minHeight="50dp"
                android:tag="3" />

        </LinearLayout>

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#090000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:text="4."
                app:autoSizeTextType="uniform" />

            <EditText
                android:id="@+id/opt4TvAddQuizQuesFAdm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Option 4"
                android:maxLines="1"
                android:minHeight="50dp"
                android:tag="4" />

        </LinearLayout>

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#070000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Correct Option"
            android:textAlignment="viewStart"
            app:autoSizeMaxTextSize="30dp"
            app:autoSizeTextType="uniform" />

        <View
            android:id="@+id/divider11"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#070000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_add_quiz_ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/checkBox1AddQuizQuesFAdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="1"
                    android:text="Opt1" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/checkBox2AddQuizQuesFAdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="2"
                    android:text="Opt 2" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/checkBox3AddQuizQuesFAdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="3"
                    android:text="Opt 3" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/checkBox4AddQuizQuesFAdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:tag="4"
                    android:text="Opt 4" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <Button
            android:id="@+id/imgBtnSetNextQues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:minHeight="50dp"
            android:src="@drawable/ic_baseline_forward_24"
            tools:src="@drawable/ic_baseline_forward_24" />

        <Button
            android:id="@+id/closeFragBtnAddQuizQuesFAdm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </LinearLayout>

</FrameLayout>